			(element TooltipSystemHorizontalDivider)
		)

		(block
			(style (width = 100%))

			(bind visible "isEnemy")
			
			(element TooltipSystemStatusLine
				_text = 'IDS_SHIP_INFO_SHOWING_MAX_PARAMS'
