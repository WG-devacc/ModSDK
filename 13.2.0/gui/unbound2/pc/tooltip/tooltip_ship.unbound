			)

			(element TooltipSystemHorizontalDivider)
			
		)

		
		(element CondensedShipParams _shipTTX = "shipTTX")

		(element TooltipSystemHorizontalDivider)
		
		(block
			(style (width = 100%))

			(macro TOOLTIP_SYSTEM_INNER_PANEL_BACKGROUND)
			
			(element ShipInfoArmamentsSimple
