	(element ShipParameter_Number	_title = 'IDS_SHIP_PARAM_VISIBILITY_DIST_BY_DEPTH_PERISCOPE'
									_value = "visibilityByDepthTTX.periscope"
									_valueConfig = "VALUE_CONFIG.KILOMETER_NEGATIVE"
