				<format>	A8R8G8B8	</format>
			</rule>
		</directory>
		<directory>
			<path>	ramps	</path>
			<rule>
				<pattern>	.*	</pattern>
				<lodMode>	0	</lodMode>
				<mipCount>  1   </mipCount>
				<format>	A8R8G8B8	</format>
			</rule>
			<rule>
				<pattern>	.*(_HDR\.).*	</pattern>
				<lodMode>	0	</lodMode>
				<mipCount>  1   </mipCount>
				<format>	BC6H </format>
			</rule>
		</directory>
		<directory>
			<path>	animated	</path>
			<rule>
				<pattern>	.*	</pattern>
				<lodMode>	1	</lodMode>
				<format>	BC3_UNORM	</format>
				<streamingStrategy> 1 </streamingStrategy>
			</rule>
			<rule>
				<pattern>	.*(_MVEA\.).*	</pattern>
				<lodMode>	1	</lodMode>
				<format>	BC7_UNORM	</format>
				<streamingStrategy> 1 </streamingStrategy>
			</rule>
			<rule>
				<pattern>	.*(_LM\.).*	</pattern>
				<lodMode>	1	</lodMode>
				<format>	BC7_UNORM	</format>
