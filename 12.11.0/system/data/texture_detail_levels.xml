			<rule>
				<pattern>	.*(_foam\.).*	</pattern>
				<lodMode>	0	</lodMode>
				<format>	BC1_UNORM	</format>
				<streamingStrategy> 0 </streamingStrategy>
			</rule>
			<rule>
				<pattern>	.*(_a\.|_a_[0-9]+\.).*	</pattern>
