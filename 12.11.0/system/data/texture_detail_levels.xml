			<noResize>	true	</noResize>
			<format> A8R8G8B8 </format>
		</rule>
	</directory>
		
	<!-- Battle space and Dock streaming rules -->
	<directory>
		<path>	content/location	</path>
		<rule>
			<pattern>	.*	</pattern>
			<streamingStrategy> 2 </streamingStrategy>
		</rule>
	</directory>
	<directory>
		<path>	content/ports	</path>
		<rule>
			<pattern>	.*	</pattern>
			<streamingStrategy> 2 </streamingStrategy>
		</rule>
	</directory>	
	
	<!-- Ships and Stuff streaming rules -->
	<directory>
		<path>	content/gameplay	</path>
		<rule>
			<pattern>	.*	</pattern>
			<streamingStrategy> 3 </streamingStrategy>
		</rule>
	</directory>	
	<directory>
		<path>	content/gameplay/common	</path>
		<rule>
			<pattern>	.*	</pattern>
			<streamingStrategy> 0 </streamingStrategy>
		</rule>
	</directory>
	<directory>
		<path>	content/gameplay/common/camouflage/textures	</path>
		<rule>
			<pattern>	.*\.dds$	</pattern>
			<lodMode>	2	</lodMode>
			<streamingStrategy> 3 </streamingStrategy>
		</rule>
	</directory>	
	
	<directory>
		<path>	content/location/skybox/textures	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode> 0 </lodMode>
			<mipCount>	1	</mipCount>
			<format> A8R8G8B8 </format>
			<streamingStrategy> 0 </streamingStrategy>			
		</rule>
	</directory>
	<directory>
		<path>	content/location/skybox/textures/cloud_shadows	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode> 0 </lodMode>
			<mipCount>	0	</mipCount>
			<format> BC1_UNORM </format>
			<streamingStrategy> 0 </streamingStrategy>			
		</rule>
	</directory>
	<directory>
		<path>	content/location/sun	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode> 0 </lodMode>
			<format> A8R8G8B8 </format>
			<streamingStrategy> 0 </streamingStrategy>			
		</rule>
	</directory>
	<directory>
		<path>	gui	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode> 0 </lodMode>
			<format> A8R8G8B8 </format>
		</rule>
	</directory>
	
	<!-- Texture Arrays rules -->
	<rule>
		<pattern>	.*(_tiles_rnao\.).*	</pattern>
		<lodMode>	1	</lodMode>
		<format>	BC3_UNORM	</format>
		<streamingStrategy> 0 </streamingStrategy>
	</rule>	
	<rule>
		<pattern>	.*(_tiles_ah\.).*	</pattern>
		<lodMode>	1	</lodMode>
		<format>	BC3_UNORM	</format>
		<streamingStrategy> 0 </streamingStrategy>
	</rule>
	
	<!-- SpeedTree rules -->
	<directory>
		<path>	content/location/speedtree	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode>	1	</lodMode>
			<streamingStrategy> 0 </streamingStrategy>
		</rule>
		<rule>
			<pattern>	.*(_spt_a\.).*	</pattern>
			<alphaCoverage>		0.75	</alphaCoverage>
			<format>	BC3_UNORM	</format>
		</rule>
		<rule>
			<pattern>	.*(_spt_n\.).*	</pattern>
			<format>	BC3_UNORM	</format>
		</rule>
	</directory>

	<!-- Projectiles rules -->
	<directory>
		<path>	content/gameplay/common/projectile/artillery/textures	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode>	0	</lodMode>
			<streamingStrategy> 0 </streamingStrategy>
		</rule>
		<rule>
			<pattern>	.*(incandescence_map).*	</pattern>
			<mipCount>	1	</mipCount>
			<format> A8R8G8B8 </format>
		</rule>
		<rule>
			<pattern>	.*(_mg\.).*	</pattern>
			<format>	BC3_UNORM	</format>
		</rule>
	</directory>
	<directory>
		<path>	editor/icons	</path>
		<rule>
			<pattern>	.*	</pattern>
			<lodMode>	0	</lodMode>
			<format>	DXT3	</format>
		</rule>
	</directory>

</texture_detail_levels.xml>
